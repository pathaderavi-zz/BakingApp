<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/stepDetailLandscape"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="layout.StepDetailFragment">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/noInternetStepDetail"
        android:layout_gravity="center_horizontal|center_vertical"
        android:text="No Internet Connection . Please try after sometime."
        android:textColor="@color/colorAccent"
        android:textSize="40dp"
        android:visibility="gone"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/stepDetailRecycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:orientation="vertical"
        app:resize_mode="fit"/>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/linearRecipeStepDetail"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.02"
            android:gravity="center|bottom"
            android:orientation="horizontal"

            android:weightSum="1">

            <Button
                android:id="@+id/previous"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="bottom|end"
                android:layout_weight="0.51"
                android:background="@color/colorPrimary"
                android:text="Previous Step"
                android:textColor="#fff" />

            <Button
                android:id="@+id/next"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="start|bottom"
                android:layout_marginLeft="10dp"
                android:layout_weight="0.51"
                android:background="@color/colorPrimary"
                android:text="Next Step"
                android:textColor="#fff"

                />
        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
