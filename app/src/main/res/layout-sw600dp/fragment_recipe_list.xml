<?xml version="1.0" encoding="utf-8"?>


<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_height="wrap_content" android:layout_width="match_parent"
        android:orientation="horizontal"
        android:id="@+id/fragmentContainerTablet"
        android:scaleType="centerInside">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/noInternet"
        android:layout_gravity="center_horizontal|center_vertical"
        android:text="No Internet Connection"
        android:textColor="@color/colorAccent"
        android:textSize="40dp"
        android:visibility="gone"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recipeListRecycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="55dp"
        android:orientation="horizontal" />
</FrameLayout>
